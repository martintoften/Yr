<resources>
    <style name="BaseTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorPrimary">@color/yr</item>
        <item name="colorPrimaryVariant">@color/blue_light</item>
        <item name="colorOnPrimary">@color/blue</item>
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorOnSurface">@color/grey</item>
        <item name="android:colorBackground">@android:color/white</item>

        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@android:color/white</item>

        <item name="toolbarStyle">@style/ToolbarTheme</item>
    </style>

    <style name="AppTheme" parent="BaseTheme"/>

    <style name="NormalText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
    </style>

    <style name="SmallText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:lineSpacingMultiplier">1.4</item>
    </style>

    <style name="ToolbarTheme" parent="@style/Widget.AppCompat.Toolbar">
        <item name="titleTextColor">?attr/colorOnBackground</item>
        <item name="android:background">?android:attr/colorBackground</item>
        <item name="navigationIcon">?attr/homeAsUpIndicator</item>
    </style>
</resources>